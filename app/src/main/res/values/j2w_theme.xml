<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="J2WTheme" />


    <style name="J2WTheme.Default" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/j2w_click_pressed</item>
        <item name="colorPrimaryDark">@color/j2w_click_pressed</item>
        <item name="colorAccent">@color/j2w_click_pressed</item>
        <item name="android:progressBarStyle">@style/J2W.Layout.Wrap.ProgressBar</item>
        <!-- 列表分割线-->
        <!--<item name="RecyclerViewDivider">@drawable/j2w_default_divider</item>-->
        <!--<item name="RecyclerViewGridDivider">@drawable/j2w_default_divider</item>-->

        <!-- 按下效果 -->
        <!--<item name="selectableItemBackground">@drawable/j2w_click_selector</item>-->
        <!--<item name="android:listChoiceBackgroundIndicator">@drawable/j2w_click_selector</item>-->
    </style>

    <style name="J2WTheme.Default.Back">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Special themes -->
    <style name="J2WTheme.Default.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/j2w_click_pressed</item>
        <item name="colorPrimaryDark">@color/j2w_click_pressed</item>
        <item name="colorAccent">@color/j2w_click_pressed</item>
        <item name="android:progressBarStyle">@style/J2W.Layout.Wrap.ProgressBar</item>
        <!-- 列表分割线-->
        <item name="RecyclerViewDivider">@drawable/j2w_default_divider</item>
        <item name="RecyclerViewGridDivider">@drawable/j2w_default_divider</item>

        <!-- 按下效果 -->
        <!--<item name="selectableItemBackground">@drawable/j2w_click_selector</item>-->
        <!--<item name="android:listChoiceBackgroundIndicator">@drawable/j2w_click_selector</item>-->
    </style>

    <style name="J2WToolbar" />

    <style name="J2WToolbar.Custom">
        <!-- 设置该属性解决空白部分 默认 16dp-->
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:theme">@style/J2WToolbar.Theme</item>
    </style>

    <style name="J2WToolbar.Theme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="homeAsUpIndicator">@mipmap/j2w_toolbar_back</item>
    </style>




    <color name="J2WTabsBackground">#6633B5E5</color>
    <color name="J2WTabsText">#FF666666</color>
</resources>