<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="J2W.Dialog" parent="Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/J2W.Animation</item>
    </style>

    <style name="J2W.Animation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_scale_in</item>
        <item name="android:windowExitAnimation">@anim/anim_scale_out</item>
    </style>

    <style name="J2W.Layout.Content">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="J2W.Layout.Custom">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="J2W.Layout.Buttons">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="J2W.Layout.Buttons.Stacked">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="J2W.Layout.Progress">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="J2W.ScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="J2W.TextView" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="J2W.TextView.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/j2w_text_primary</item>
        <!-- paddings set in code -->
    </style>

    <style name="J2W.TextView.Message">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/j2w_text_secondary</item>
        <!-- paddings set in code -->
    </style>

    <style name="J2W.TextView.Message.Progress">
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="J2W.TextView.ListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/j2w_text_primary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>

    <style name="J2W.TextView.MultiChoice">
        <item name="android:minHeight">52dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/j2w_text_primary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">24dp</item>
    </style>

    <style name="J2W.ListItemControl">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:clickable">false</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="J2W.ListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>

    <style name="J2W.Button">
        <item name="android:background">@drawable/j2w_dialog_button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/j2w_click_pressed</item>
    </style>

    <style name="J2W.Button.Stacked">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="J2W.Expander">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="J2W.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/j2w_divider</item>
    </style>

    <style name="J2W.Space">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="J2W.Space.ButtonsBottom">
        <item name="android:layout_height">8dp</item>
    </style>

    <style name="J2W.Progress" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="J2W.DatePicker">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:spinnersShown" tools:ignore="NewApi">true</item>
        <item name="android:calendarViewShown" tools:ignore="NewApi">false</item>
    </style>

    <style name="J2W.ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:listSelector">@drawable/j2w_dialog_list</item>
    </style>

    <style name="J2W.TextView.Title.Dark" parent="J2W.TextView.Title">
        <item name="android:textColor">@color/j2w_textColor_primary_dark</item>
        <!-- paddings set in code -->
    </style>

    <style name="J2W.TextView.Message.Dark" parent="J2W.TextView.Message">
        <item name="android:textColor">@color/j2w_textColor_primary_dark</item>
        <!-- paddings set in code -->
    </style>

    <style name="J2W.TextView.ListItem.Dark" parent="J2W.TextView.ListItem">
        <item name="android:textColor">@color/j2w_textColor_primary_dark</item>
    </style>

    <style name="J2W.TextView.MultiChoice.Dark" parent="J2W.TextView.MultiChoice">
        <item name="android:textColor">@color/j2w_textColor_primary_dark</item>
    </style>

    <style name="J2W.TextView.Message.Progress.Dark" parent="J2W.TextView.Message.Progress">
        <item name="android:textColor">@color/j2w_textColor_primary_dark</item>
    </style>

    <!--EasyDialog-->
    <style name="J2W.EasyDialog" parent="@android:style/Theme.Translucent.NoTitleBar.Fullscreen"></style>
    <style name="J2W.EasyDialog.Fullscreen" parent="@android:style/Theme.Translucent.NoTitleBar.Fullscreen"></style>

    <style name="J2W.EasyDialog.Translucent" parent="@android:style/Theme.Translucent.NoTitleBar"></style>

</resources>